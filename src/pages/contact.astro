---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';

const email = 'oliver78660@gmail.com'; // change if you want
const github = 'https://github.com/oliverramos2004'; // change if needed
const linkedin = 'https://www.linkedin.com/in/oliverramos1'; // change if needed
---

<BaseLayout
  title="Contact — Oliver Ramos"
  description="Reach out to Oliver Ramos for opportunities, collaboration, or questions."
>
  <Fragment slot="nav"><Navbar /></Fragment>

  <section class="py-16">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-3xl font-bold tracking-tight">Let’s connect</h1>
      <p class="mt-3 text-neutral-700">
        Whether a project idea, a quick question, or simply to chat! I usually
        reply within 24–48 hours.
      </p>

      <div class="mt-8 grid gap-6 md:grid-cols-2">
        <!-- Contact Card -->
        <div class="rounded-2xl border p-6">
          <h2 class="text-lg font-semibold">Direct</h2>
          <p class="mt-2 text-sm text-neutral-600">
            Best for opportunities, collaborations, or introductions.
          </p>

          <div class="mt-4 space-y-2 text-sm">
            <a
              class="block underline underline-offset-4 hover:text-black"
              href={`mailto:${email}`}
            >
              {email}
            </a>
            <a
              class="block underline underline-offset-4 hover:text-black"
              href={linkedin}
              target="_blank"
              rel="noreferrer"
            >
              LinkedIn
            </a>
            <a
              class="block underline underline-offset-4 hover:text-black"
              href={github}
              target="_blank"
              rel="noreferrer"
            >
              GitHub
            </a>
          </div>

          <div class="mt-5 flex flex-wrap gap-3">
            <a
              class="rounded-2xl bg-black px-4 py-2 text-sm font-medium text-white hover:bg-neutral-800"
              href={`mailto:${email}?subject=Hello%20Oliver&body=Hi%20Oliver%2C%0A%0A`}
            >
              Email me
            </a>
            <a
              class="rounded-2xl border px-4 py-2 text-sm font-medium hover:bg-neutral-100"
              href={linkedin}
              target="_blank"
              rel="noreferrer"
            >
              Message on LinkedIn
            </a>
          </div>
        </div>

        <!-- Form Card (no backend needed if you use Formspree) -->
        <div class="rounded-2xl border p-6">
          <h2 class="text-lg font-semibold">Send a message</h2>
          <p class="mt-2 text-sm text-neutral-600">
            Quick note. If you prefer email, use the button on the left.
          </p>

          <form
            class="mt-4 space-y-4"
            method="POST"
            action="https://formspree.io/f/xwpgaeab"
          >
            <div>
              <label class="text-sm font-medium" for="name">Name</label>
              <input
                id="name"
                name="name"
                required
                class="mt-1 w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-black"
                placeholder="Your name"
              />
            </div>

            <div>
              <label class="text-sm font-medium" for="email">Email</label>
              <input
                id="email"
                type="email"
                name="email"
                required
                class="mt-1 w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-black"
                placeholder="you@example.com"
              />
            </div>

            <div>
              <label class="text-sm font-medium" for="message">Message</label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="mt-1 w-full rounded-xl border px-3 py-2 text-sm outline-none focus:ring-2 focus:ring-black"
                placeholder="What would you like to talk about?"></textarea>
            </div>

            <!-- Optional hidden field for subject -->
            <input
              type="hidden"
              name="_subject"
              value="New message from personal website"
            />

            <button
              type="submit"
              class="w-full rounded-2xl bg-black px-4 py-2 text-sm font-medium text-white hover:bg-neutral-800 transition"
            >
              Send message
            </button>

            <p class="text-xs text-neutral-500">
              Messages are sent securely via Formspree.
            </p>
          </form>
        </div>
      </div>

      <!-- Optional: Availability / vibe -->
      <div class="mt-10 rounded-2xl border p-6">
        <h3 class="text-base font-semibold">What I’m open to</h3>
        <ul class="mt-3 list-disc pl-5 text-sm text-neutral-700 space-y-1">
          <li>Software / data entry-level roles</li>
          <li>
            Freelance web work (small sites, landing pages, portfolio builds)
          </li>
          <li>
            Creative collaborations (design, visuals, music-related projects)
          </li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
