---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
---
<BaseLayout title="Oliver Ramos — Portfolio" description="CS developer & creator. Fast, human-friendly tools and clean UX.">
  <Fragment slot="nav"><Navbar /></Fragment>
  <div class="relative">
  <div class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(60%_60%_at_50%_0%,rgba(59,130,246,0.12),transparent_60%)]"></div>
    <Hero
      title="Hi, I’m Oliver — an innovative leader with experience in business ventures."
      subtitle="I am a current senior studying Computer Science at Wabash College. Here I learned to think critically, lead effectively, and collaborate with diverse teams. I value creativity, efficiency, and community in all my projects."
      primaryCtaHref="/projects"
      primaryCtaLabel="View projects"
      secondaryCtaHref="/contact"
      secondaryCtaLabel="Contact me"
      imgSrc="/index-photo.jpg"
      imgAlt="Oliver working on a laptop with notes and sketches"
    />
  </div>

  <!-- Keep a small spacer so the page feels finished -->
  <section class="py-10">
    <p class="text-neutral-600">More sections coming soon…</p>
  </section>
</BaseLayout>
