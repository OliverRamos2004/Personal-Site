---
const links = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<nav class="flex h-16 items-center justify-between">
  <a href="/" class="text-base font-semibold">Oliver Ramos</a>

  <!-- Desktop -->
  <ul class="hidden md:flex gap-6">
    {
      links.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class="hover:underline focus-visible:outline-2 focus-visible:outline-offset-2"
          >
            {label}
          </a>
        </li>
      ))
    }
  </ul>

  <a
    href="/contact"
    class="hidden md:inline-block rounded-2xl bg-black px-4 py-2 text-white"
  >
    Get in touch
  </a>

  <!-- Mobile -->
  <details class="relative md:hidden">
    <summary class="cursor-pointer list-none rounded border px-3 py-2">
      Menu
    </summary>
    <ul class="absolute right-0 mt-2 w-44 rounded-lg border bg-white shadow">
      {
        links.map(({ href, label }) => (
          <li>
            <a class="block px-3 py-2 hover:bg-neutral-100" href={href}>
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </details>
</nav>
